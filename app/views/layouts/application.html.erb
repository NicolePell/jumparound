<!DOCTYPE html>
<html>
<head>
  <title>Jumparound</title>

  <script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=true"></script>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body>
  <div class="modal" id="new_user_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <%= render 'devise/registrations/new' %>
        </div>
        <div class="modal-footer">
          <a href="#" rel="modal:close" class="close-modal ">Close</a>
        </div>
      </div>
    </div>
  </div>

  <div class="modal" id="new_session_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <%= render 'devise/sessions/new' %>
        </div>
        <div class="modal-footer">
          <a href="#" rel="modal:close" class="close-modal ">Close</a>
        </div>
      </div>
    </div>
  </div>

  <div class="modal" id="new_sighting_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <%= render 'sightings/new' %>
        </div>
        <div class="modal-footer">
          <a href="#" rel="modal:close" class="close-modal ">Close</a>
        </div>
      </div>
    </div>
  </div>

  <a id="home"></a>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% if current_page?('/') %>
        <a class="navbar-brand" href="#home">jumparound.info</a>
      <% else %>
        <%= link_to 'jumparound.info', root_path, 'data-no-turbolink' => true, class: "navbar-brand" %>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/shop">Shop</a></li>
        <li><a href="/gallery">Gallery</a></li>
        <li><%= link_to 'Add Sighting', "#new_sighting_modal", remote: true, :class => "newsighting" %></li>
        <% if current_page?('/') %>
          <li><a href="#recent-sightings">Recent Sightings</a></li>
          <li><a href="#about">About</a></li>
          <li><a href="#team">Team</a></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
         <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign up', "#new_user_modal", remote: true, :class => "signup" %></li>
          <li><%= link_to 'Sign in', "#new_session_modal", remote: true, :class => "signin"  %></li>
          <li><%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook) %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
</br>
</br>

<%= yield %>

</body>
</html>
